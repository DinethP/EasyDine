<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pastOrdersConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pastOrdersImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/pastOrdersConstraintLayout" />

        <TextView
            android:id="@+id/pastOrdersRestaurantLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/restaurant_label"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/pastOrdersImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pastOrdersRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/card_name"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/pastOrdersRestaurantLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pastOrdersDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/date_label"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/pastOrdersImageView"
            app:layout_constraintTop_toBottomOf="@id/pastOrdersRestaurantLabel" />

        <TextView
            android:id="@+id/pastOrdersDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/card_name"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/pastOrdersDateLabel"
            app:layout_constraintTop_toBottomOf="@id/pastOrdersRestaurantName" />

        <TextView
            android:id="@+id/pastOrdersFriendsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/friends_label"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/pastOrdersImageView"
            app:layout_constraintTop_toBottomOf="@id/pastOrdersDateLabel" />

        <TextView
            android:id="@+id/pastOrdersFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/card_name"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/pastOrdersFriendsLabel"
            app:layout_constraintTop_toBottomOf="@id/pastOrdersDate" />

        <Button
            android:id="@+id/markPayedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/mark_as_payed"
            android:onClick="markPayed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/pastOrdersImageView"
            app:layout_constraintTop_toBottomOf="@id/pastOrdersDate"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>