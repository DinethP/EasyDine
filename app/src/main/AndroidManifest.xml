<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.cuhk.csci3310.easydine">
<!--    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" tools:node="remove"/>-->

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyDine">
        <activity android:name=".NewOrderDetails"></activity>
        <activity android:name=".PlacesActivity" />
        <activity android:name=".PayActivity" />
        <activity android:name=".MyProfile" /> <!-- android:noHistory doesn't put LoginScreen to backstack -->
        <activity
            android:name=".LoginActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>